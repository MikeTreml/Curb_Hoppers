@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-listee"><a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="nav-element">Hello @User.Identity.Name!</a></li>
    <li class="nav-listee">
        <form  class="" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-element">Logout</button>
        </form></li>
    

}
else
{
    <li class="nav-listee"><a asp-area="Identity" asp-page="/Account/Register" class="nav-element">Register</a></li>
    <li class="nav-listee"><a asp-area="Identity" asp-page="/Account/Login" class="nav-element">Login</a></li>
    
}
