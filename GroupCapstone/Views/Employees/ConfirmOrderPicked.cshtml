@model GroupCapstone.Models.Order

@{
    ViewData["Title"] = "ConfirmOrderPicked";
}

<h1>ConfirmOrderPicked</h1>

<hr />
<div class="">
    <div class="">
        <form asp-action="ConfirmOrderPicked" class="form minor-page">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Date" />
            <input type="hidden" asp-for="TotalPrice" />
            <input type="hidden" asp-for="IsCompleted" />
            <input type="hidden" asp-for="CustomerId" />
            
            
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPicked" /> @Html.DisplayNameFor(model => model.IsPicked)
                </label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
