@model IEnumerable<GroupCapstone.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPicked)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsCompleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPicked)
                </td>
                <td>

                    <a asp-action="OrderDetailsIndex" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="ConfirmOrderComplete" asp-route-id="@item.Id">Complete Order</a> |
                    <a asp-action="ConfirmOrderPicked" asp-route-id="@item.Id">Pick Order</a>

                </td>
            </tr>
        }
    </tbody>
</table>