@model IEnumerable<GroupCapstone.Models.OrderOrderDetailProductVM>

@{
    ViewData["Title"] = "OrderDetailsIndex";
}

@*Buttons for Confirm Picked & Confirmed Order Complete should be on this page.*@
<a asp-action="ConfirmOrderComplete" class="btn">Complete Order</a>
<a asp-action="ConfirmOrderPicked" class="btn">Pick Order</a>
<h1 class="heading-primary--main">OrderDetails</h1>

<p>
    <a asp-action="Index">Back to Orders</a>
</p>
<table class="form">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(Model => Model.OrderVM.Id)</th>
            <th>@Html.DisplayNameFor(Model => Model.ProductVM.Name)</th>
            <th>@Html.DisplayNameFor(Model => Model.OrderDetailsVM.Quantity)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(ModelItem => item.OrderVM.Id)</td>
            <td>@Html.DisplayFor(ModelItem => item.ProductVM.Name)</td>
            <td>@Html.DisplayFor(ModelItem => item.OrderDetailsVM.Quantity)</td>
            
        </tr>
        
}
    </tbody>
</table>
