@model IEnumerable<GroupCapstone.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
<partial name="_LoginPartial" class=""/>
<a class="btn btn--cart" asp-area="" asp-controller="Customers" asp-action="Cart"><span id="cart_count">Cart(@ViewData["CartCount"])</span> <span>$@ViewData["CartTotalCostString"]</span></a>

<h1 class="heading-primary--main  minor-page">Browse Our Products! </h1>

<section class="section-products">
    <div>

@foreach (var item in Model) {
    <div class="row">
        <div class="col-1-of-4">
            <div class="products-box">
                <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="" class="products-box">

                <h3 class="heading-tertiary u-margin-bottom-small">@Html.DisplayFor(modelItem => item.Name)<br>@Html.DisplayFor(modelItem => item.ProductCategory)</h3>
                <p class="projects-box__text">
                    $@item.Price.ToString("0.00")
                </p>
                <p class="projects-box__text">
                     @Html.DisplayFor(modelItem => item.Details)
                </p>
                <a class="btn" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn" asp-action="AddToCart" asp-route-id="@item.Id">Add To Cart</a>
            </div>
        </div>
    </div>
}
</section>