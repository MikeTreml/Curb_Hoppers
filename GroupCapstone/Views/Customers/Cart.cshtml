@model IEnumerable<GroupCapstone.Models.ShoppingCart>

@{
    ViewData["Title"] = "Cart";

}
<script src="https://js.stripe.com/v3/"></script>
<h1 class="heading-primary--main">Cart</h1>
<table class="form">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qty)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Total
            </th>
            <th>
                Category
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>

            <td>
                $@item.Price.ToString("0.00")
            
            </td>
            <td>
                $@((item.Price * item.Qty).ToString("0.00"))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-action="CheckOut" asp-route-id=@ViewData["cusomerId"]>CheckOut</a>




