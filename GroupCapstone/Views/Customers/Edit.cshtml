@model GroupCapstone.Models.ShoppingCart

@{
    ViewData["Title"] = "Edit";

}


<h4>ShoppingCart</h4>
<hr />
<div class="">
    <div class="">
        <form asp-action="Edit" class="form" style="margin-top: 10rem;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Qty" class="control-label"></label>
                <input asp-for="Qty" class="form-control" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input hidden asp-for="Name" class="form-control" />
            
            </div>
            <div class="form-group">
               
                <input hidden asp-for="Price" class="form-control" />
         
            </div>
            <div class="form-group">
                
                <input hidden asp-for="ProductCategory" class="form-control" />
             
            </div>
            <div class="form-group">
              
                <input hidden asp-for="ImageUrl" class="form-control" />
                
            </div>
            <div class="form-group">
              
                <input hidden asp-for="ProductId" class="form-control" />
              
            </div>
            <div class="form-group">
               
                <input hidden asp-for="CustomerId" class="form-control" />
              
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Cart">Back to Cart</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
