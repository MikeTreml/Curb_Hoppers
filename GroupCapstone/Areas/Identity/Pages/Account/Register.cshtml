@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<h1>@ViewData["Title"]</h1>

<div class="register__test">
    <div class="">
			<form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form">
				<h4>Create a new account.</h4>
				<hr />
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form__group">
					<label asp-for="Input.Email"></label>
					<input asp-for="Input.Email" class="form__input" />
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form__group">
					<label asp-for="Input.Role"></label>
					<select asp-for="Input.Role" class="form__input" asp-items="@Model.Roles"></select>>
					<span asp-validation-for="Input.Role" class="text-danger"></span>
				</div>
				<div class="form__group">
					<label asp-for="Input.Password"></label>
					<input asp-for="Input.Password" class="form__input" />
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div class="form__group">
					<label asp-for="Input.ConfirmPassword"></label>
					<input asp-for="Input.ConfirmPassword" class="form__input" />
					<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
				</div>
				<button type="submit" class="btn btn-primary">Register</button>
			</form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
